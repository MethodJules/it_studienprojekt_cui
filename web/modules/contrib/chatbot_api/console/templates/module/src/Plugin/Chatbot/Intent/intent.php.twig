{% extends "base/class.php.twig" %}

{% block file_path %}
\Drupal\{{ module }}\Plugin\Chatbot\Intent\{{ class_name }}.
{% endblock %}

{% block namespace_class %}
namespace Drupal\{{ module }}\Plugin\Chatbot\Intent;
{% endblock %}

{% block use_class %}
use Drupal\chatbot_api\Plugin\IntentPluginBase;
{% endblock %}

{% block class_declaration %}
/**
 * Plugin implementation of the '{{ plugin_id }}' Chatbot API Intent.
 *
 * @Intent(
 *   id = "{{ plugin_id }}",
 *   label = @Translation("{{ label }}")
 * )
 */
class {{ class_name }} extends IntentPluginBase {% endblock %}
{% block class_methods %}
  /**
   * {@inheritdoc}
   */
  public function process() {
    $this->response->setIntentResponse('Hello World!');
    $this->response->setIntentDisplayCard('Hi to everyone!', 'Greetings');
  }
{% endblock %}
